
var MAXSIZE = 32;
var i;
var x;
var y;
y = MAXSIZE - 1;
while (y >= 0)
{
    i = 0;
    while (i < y)
    {
        print(' ');
        i += 1;
    }
    x = 0;
    while(x + y < MAXSIZE)
    {
        if((x & y) > 0)
        {
            print(' ');
        }
        else
        {
            print('*');
        }
        print(' ');
        x += 1;
    }
    println("");
    y -= 1;
}

